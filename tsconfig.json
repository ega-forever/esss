{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": ["es2020"]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
